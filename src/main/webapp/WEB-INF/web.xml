<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>JavaServletsProject</display-name>

    <servlet>
        <servlet-name>QuoteServlet</servlet-name>
        <servlet-class>servlets.QuoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuoteServlet</servlet-name>
        <url-pattern>/quote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MaxNumberServlet</servlet-name>
        <servlet-class>servlets.MaxNumberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaxNumberServlet</servlet-name>
        <url-pattern>/numb</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NumberServlet</servlet-name>
        <servlet-class>servlets.NumberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NumberServlet</servlet-name>
        <url-pattern>/numbers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TextAnalysisServlet</servlet-name>
        <servlet-class>servlets.TextAnalysisServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TextAnalysisServlet</servlet-name>
        <url-pattern>/analyze</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>servlets.CalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calc</url-pattern>
    </servlet-mapping>

</web-app>
